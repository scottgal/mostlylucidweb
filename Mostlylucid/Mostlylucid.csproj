      <PackageReference Include="Markdig" Version="0.37.0" />
      <PackageReference Include="SixLabors.ImageSharp.Web" Version="3.1.3" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="wwwroot\lib\" />
    </ItemGroup>

