@model Mostlylucid.Email.Models.CommentEmailModel
<!DOCTYPE html>
<html>
<head>
    <title>Comment Email</title>
</head>
<body>
<h1>Comment Email</h1>
<p>New comment from email @Model.SenderEmail</p>

<p>Thank you for your comment on our blog post. We appreciate your feedback.</p>
<p>Here is your comment:</p>
<div>@Raw(@Model.Comment)</div>
<p>Thanks,</p>
<p>The Blog Team</p>

</body>
</html>