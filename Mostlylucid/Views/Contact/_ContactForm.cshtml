@model Mostlylucid.Models.Contact.ContactViewModel


 <form asp-action="Submit" hx-boost="true" hx-push-url="false" hx-target="#Comment" method="post" x-data>
        @Html.AntiForgeryToken()
        <div class="max-w-none border-b border-grey-lighter py-2 dark:prose-dark sm:py-2">
            <div asp-validation-summary="All" class="text-red-500" id="validationsummary"></div>
            <!-- Username Input -->
            <label class="input input-bordered flex items-center gap-2 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4 opacity-70">
                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z"/>
                </svg>
                <input type="text" class="grow" asp-for="Name" placeholder="Name (optional)"/>
            </label>

            <!-- Email Input -->
            <label class="input input-bordered flex items-center gap-2 mt-2 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4 opacity-70">
                    <path d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z"/>
                    <path d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z"/>
                </svg>
                <input type="text" class="grow" placeholder="Email (optional)" asp-for="Email"/>
            </label>


            <input type="hidden" id="hiddenComment" name="comment"/>
            <!-- Comment Textarea -->
            <textarea id="comment" class="textarea textarea-bordered w-full mt-2 hidden" placeholder="Your comment...">@Model.Comment</textarea>
            <!-- Submit Button -->
            <button class="btn btn-primary mt-4"
                    type="submit"
                    data-umami-event="Send Comment Click"
                    x-on:click="document.getElementById('hiddenComment').value = window.simplemde ? window.simplemde.value() : ''">
                Comment
            </button>
        </div>
    </form>