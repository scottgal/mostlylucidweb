{
  "scripts": {
    "dev": "npm-run-all dev:*",
    "dev:tw": "postcss src/css/main.css -o wwwroot/css/dist/main.css --config postcss.config.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:tw": "postcss src/css/main.css -o wwwroot/css/dist/main.css --watch --config postcss.config.js",
    "build": "npm-run-all build:*",
    "build:tw": "postcss src/css/main.css -o wwwroot/css/dist/main.css --config postcss.config.js"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.12",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.4",
    "daisyui": "^4.12.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.41",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.7",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/alpinejs": "^3.13.10",
    "htmx.org": "^2.0.1",
    "juice": "^10.0.0"
  }
