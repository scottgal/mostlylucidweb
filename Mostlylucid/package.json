{
  "scripts": {
    "dev": "npm-run-all dev:*",
    "dev:tw": "postcss src/css/main.css -o wwwroot/css/dist/main.css --config postcss.config.js",
    "dev:js": "webpack --mode development",
    "watch": "npm-run-all --parallel watch:*",
    "watch:tw": "postcss src/css/main.css -o wwwroot/css/dist/main.css --watch --config postcss.config.js",
    "watch:js": "webpack --watch --mode development",
    "build": "npm-run-all build:*",
    "build:tw": "postcss src/css/main.css -o wwwroot/css/dist/main.css --config postcss.config.js",
    "build:js": "webpack --mode production"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.12",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.4",
    "daisyui": "^4.12.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.41",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "tailwindcss": "^3.4.7",
    "terser-webpack-plugin": "^5.3.10",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "alpinejs": "^3.14.1",
    "highlight.js": "^11.10.0",
    "highlightjs-cshtml-razor": "^2.1.1",
    "htmx.org": "^2.0.1",
    "mermaid": "^11.0.2",
    "simplemde": "^1.11.2"
  }
}
